{
  "appenders": {
    "node": {
      "type": "file",
      "filename": "./test/logs/node-log-${opts:serverId}.log",
      "fileSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 5
    },
    "console": {
      "type": "console"
    },
    "con-log": {
      "type": "file",
      "filename": "./test/logs/con-log-${opts:serverId}.log",
      "pattern": "connector",
      "maxLogSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 5,
      "category": "con-log"
    },
    "rpc-log": {
      "type": "file",
      "filename": "./test/logs/rpc-log-${opts:serverId}.log",
      "fileSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 5,
      "category": "rpc-log"
    },
    "forward-log": {
      "type": "file",
      "filename": "./test/logs/forward-log-${opts:serverId}.log",
      "fileSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 5,
      "category": "forward-log"
    },
    "crash-log": {
      "type": "file",
      "filename": "./test/logs/crash.log",
      "fileSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 5,
      "category": "crash-log"
    },
    "transaction": {
      "type": "file",
      "filename": "./test/logs/transaction.log",
      "fileSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 5,
      "category": "transaction-log"
    },
    "transaction-error": {
      "type": "file",
      "filename": "./test/logs/transaction-error.log",
      "fileSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 5,
      "category": "transaction-error-log"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "rpc-log"
      ],
      "level": "error"
    }
  },
  "replaceConsole": true
}
